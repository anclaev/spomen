{
  "name": "@spomen/workspace",
  "version": "0.0.0",
  "description": "Spomen workspace",
  "author": "Artem Samarin <iahugo@yandex.ru> (https://t.me/anclaev)",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "commit": "yarn git-cz",
    "changelog": "yarn conventional-changelog -p nextjs -i CHANGELOG.md -s",
    "push": "git push --follow-tags origin && git push --follow-tags gitverse",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "dev": "nx serve",
    "build:all": "nx run-many --target=build --all"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false
    }
  },
  "lint-staged": {
    "*.(ts|tsx|sass|css)": [
      "prettier --write",
      "yarn lint --fix"
    ],
    "*.md": "prettier --write"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.2",
    "@nestjs/cqrs": "^10.2.8",
    "@nestjs/microservices": "^10.4.8",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^6.0.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.0.0",
    "kafkajs": "^2.2.4",
    "nest-winston": "^1.9.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.4.12",
    "@nrwl/workspace": "^19.8.4",
    "@nx-tools/container-metadata": "^6.1.1",
    "@nx-tools/nx-container": "^6.1.1",
    "@nx-tools/nx-prisma": "^6.4.1",
    "@nx/eslint": "20.1.3",
    "@nx/eslint-plugin": "20.1.3",
    "@nx/jest": "20.1.3",
    "@nx/js": "20.1.3",
    "@nx/nest": "20.1.3",
    "@nx/node": "20.1.3",
    "@nx/web": "20.1.3",
    "@nx/webpack": "20.1.3",
    "@nx/workspace": "20.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nx": "20.1.3",
    "prettier": "^3.3.3",
    "prisma": "^6.0.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.0.0",
    "webpack-cli": "^5.1.4"
  },
  "nx": {
    "includedScripts": []
  }
}
