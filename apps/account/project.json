{
  "name": "@spomen/account",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/account/src",
  "authors": ["Artem Samarin <iahugo@yandex.ru> (https://t.me/anclaev)"],
  "copyright": "anclaev",
  "description": "Account service of Spomen",
  "title": "@spomen/account",
  "projectType": "application",
  "tags": ["account"],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "account:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "account:build:development"
        },
        "production": {
          "buildTarget": "account:build:production"
        }
      }
    },
    "prisma-deploy": {
      "executor": "@nx-tools/nx-prisma:deploy",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-format": {
      "executor": "@nx-tools/nx-prisma:format",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-generate": {
      "executor": "@nx-tools/nx-prisma:generate",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-migrate": {
      "executor": "@nx-tools/nx-prisma:migrate",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-pull": {
      "executor": "@nx-tools/nx-prisma:pull",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-push": {
      "executor": "@nx-tools/nx-prisma:push",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-reset": {
      "executor": "@nx-tools/nx-prisma:reset",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-resolve": {
      "executor": "@nx-tools/nx-prisma:resolve",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-seed": {
      "executor": "@nx-tools/nx-prisma:seed",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-status": {
      "executor": "@nx-tools/nx-prisma:status",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-studio": {
      "executor": "@nx-tools/nx-prisma:studio",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "prisma-validate": {
      "executor": "@nx-tools/nx-prisma:validate",
      "options": {
        "schema": "apps/account/schema.prisma"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "local",
      "dependsOn": ["build"],
      "options": {
        "load": true,
        "engine": "docker",
        "build-args": ["NODE_ENV=local"]
      },
      "configurations": {
        "local": {
          "push": false,
          "load": true,
          "build-args": ["NODE_ENV=local"],
          "tags": ["anclaev/spomen-account:local"]
        },
        "staging": {
          "push": true,
          "cache-from": ["type=gha"],
          "cache-to": ["type=gha,mode=max"],
          "build-args": ["NODE_ENV=staging"],
          "tags": ["anclaev/spomen-account:staging"]
        },
        "production": {
          "push": true,
          "cache-from": ["type=gha"],
          "cache-to": ["type=gha,mode=max"],
          "build-args": ["NODE_ENV=production"],
          "tags": ["anclaev/spomen-account:latest"]
        }
      }
    }
  }
}
